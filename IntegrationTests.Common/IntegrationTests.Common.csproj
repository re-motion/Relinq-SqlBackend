<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ProjectType>Test</ProjectType>
  </PropertyGroup>

  <Import Project="..\Shared.build.props" />

  <PropertyGroup>
    <AssemblyTitle>Common functionality for integration tests for the Remotion Data Linq library</AssemblyTitle>
    <Description>Contains the common database and utility classes used by integration tests for re-linq.</Description>
    <AssemblyName>Remotion.Linq.IntegrationTests.Common</AssemblyName>
    <RootNamespace>$(AssemblyName)</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
    <ProjectReference Include="..\LinqToSqlAdapter\LinqToSqlAdapter.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Remotion.Linq" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="Core.Data.Linq" />
    <PackageReference Include="System.Configuration.ConfigurationManager" VersionOverride="6.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
    <PackageReference Include="Core.Data.Linq" />
    <PackageReference Include="System.Configuration.ConfigurationManager" VersionOverride="7.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Core.Data.Linq" />
    <PackageReference Include="System.Configuration.ConfigurationManager" VersionOverride="8.0.0-preview.*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Core.Data.Linq" />
    <PackageReference Include="System.Configuration.ConfigurationManager" VersionOverride="9.0.0-preview.6.24327.7" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Configuration" />
    <Reference Include="System.Data.Linq" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Database\Northwnd License.txt" />
    <Content Include="Database\Northwnd.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>